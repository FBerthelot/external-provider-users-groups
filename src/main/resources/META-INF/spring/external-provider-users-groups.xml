<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">


  <osgi:reference id="ExternalProviderInitializerService" interface="org.jahia.modules.external.ExternalProviderInitializerService"/>

  <bean id="UsersDataSourcePrototype" class="org.jahia.modules.external.users.UsersDataSource"
        scope="prototype">
    <property name="jahiaUserManagerService" ref="JahiaUserManagerService"/>
  </bean>

  <bean id="GroupsDataSourcePrototype" class="org.jahia.modules.external.users.GroupsDataSource"
        scope="prototype">
    <property name="jahiaUserManagerService" ref="JahiaUserManagerService"/>
    <property name="externalProviderInitializerService" ref="ExternalProviderInitializerService"/>
  </bean>

</beans>