<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="userGroupProviderHandler" class="org.jahia.modules.external.users.admin.UserGroupProviderAdminFlow"/>

    <view-state id="view" >
        <on-render>
            <evaluate expression="userGroupProviderHandler.userGroupProviders" result="requestScope.userGroupProviders"/>
            <evaluate expression="userGroupProviderHandler.createConfigurations" result="requestScope.createConfigurations"/>
        </on-render>
        <transition on="suspendProvider" to="suspendProvider"/>
        <transition on="resumeProvider" to="resumeProvider"/>
        <transition on="createProvider" to="createProviderForm"/>
        <transition on="editProvider" to="editProviderForm"/>
        <transition on="deleteProvider" to="deleteProviderForm"/>
    </view-state>

    <action-state id="suspendProvider">
        <evaluate expression="userGroupProviderHandler.suspendProvider(requestParameters.providerKey)"/>
        <transition to="view"/>
    </action-state>

    <action-state id="resumeProvider">
        <evaluate expression="userGroupProviderHandler.resumeProvider(requestParameters.providerKey)"/>
        <transition to="view"/>
    </action-state>

    <view-state id="createProviderForm">
        <on-entry>
            <evaluate expression="requestParameters.providerClass" result="flowScope.providerClass"/>
            <evaluate expression="requestParameters.createJSP" result="flowScope.createJSP"/>
        </on-entry>
        <transition on="create" to="createProvider"/>
        <transition on="cancel" to="view"/>
    </view-state>

    <action-state id="createProvider">
        <evaluate expression="userGroupProviderHandler.createProvider(requestParameters)"/>
        <transition to="view"/>
    </action-state>

    <view-state id="editProviderForm">
        <on-entry>
            <evaluate expression="requestParameters.providerKey" result="flowScope.providerKey"/>
            <evaluate expression="requestParameters.providerClass" result="flowScope.providerClass"/>
            <evaluate expression="requestParameters.editJSP" result="flowScope.editJSP"/>
        </on-entry>
        <transition on="save" to="editProvider"/>
        <transition on="cancel" to="view"/>
    </view-state>

    <action-state id="editProvider">
        <evaluate expression="userGroupProviderHandler.editProvider(requestParameters)"/>
        <transition to="view"/>
    </action-state>

    <view-state id="deleteProviderForm">
      <on-entry>
        <evaluate expression="requestParameters.providerKey" result="flowScope.providerKey"/>
        <evaluate expression="requestParameters.providerClass" result="flowScope.providerClass"/>
      </on-entry>
      <transition on="delete" to="deleteProvider"/>
      <transition on="cancel" to="view"/>
    </view-state>

    <action-state id="deleteProvider">
        <evaluate expression="userGroupProviderHandler.deleteProvider(requestParameters.providerKey, requestParameters.providerClass)"/>
        <transition to="view"/>
    </action-state>

</flow>
